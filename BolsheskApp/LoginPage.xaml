<Page x:Class="BolsheskApp.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BolsheskApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <StackPanel Orientation="Vertical" Width="300" VerticalAlignment="Center">
            <TextBlock Margin="0,0,0,50" HorizontalAlignment="Center" FontSize="20" FontWeight="ExtraBold">Авторизация</TextBlock>
            <TextBlock Text="Имя" Margin="5,10,0,0" />
            <TextBox x:Name="tb1"/>
            <TextBlock Text="Фамилия" Margin="5,10,0,0" />
            <TextBox x:Name="tb2"/>
            <Button Content="Вход" x:Name="btnSave" Click="btnSave_Click" Margin="5,20,5,5" Width="100"/>
            <Button Content="Выход" x:Name="btnBack" Click="btnBack_Click" Margin="5" Width="100" />

        </StackPanel>
    </Grid>
</Page>
