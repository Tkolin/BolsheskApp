<Page x:Class="BolsheskApp.NavigationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BolsheskApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NavigationPage" Loaded="Page_Loaded">

    <Grid>
        <StackPanel Orientation="Vertical" Width="200" Margin="10" Height="400">
            <TextBlock Margin="0,0,0,40" HorizontalAlignment="Center" FontSize="16" FontWeight="ExtraBold">Меню</TextBlock>
            <Button Content="Мероприятия" x:Name="btn1" Click="btn1_Click" Margin="20,5,20,5"/>
            <Button Content="Пользователи" x:Name="btn2" Click="btn2_Click" Margin="20,5,20,5"/>
            <Button Content="План" x:Name="btn3" Click="btn33_Click" Margin="20,5,20,5"/>
            <Button Content="Места проведения" x:Name="btn4" Click="btn4_Click" Margin="20,5,20,5"/>
            <Button Content="Назад" x:Name="btnBack" Click="btnBack_Click" Margin="20,20,20,5"  />
        </StackPanel>
    </Grid>
</Page>
